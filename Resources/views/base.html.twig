{% javascripts
'@KodoDashboardBundle/Resources/public/js/jquery-3.2.1.min.js'
'@KodoDashboardBundle/Resources/public/js/tether.min.js'
'@bootstrap_js'
'@KodoDashboardBundle/Resources/public/js/main.js'
%}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
</body>
</html>
